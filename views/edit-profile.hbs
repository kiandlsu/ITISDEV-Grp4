<!-- edit-profile -->
<html>
    <head>
        <link rel="icon" type="image/x-icon" href="../images/logo.png">
        <link rel="stylesheet" type="text/css" href="stylesheets/profile.css" />
        <link rel="stylesheet" type="text/css" href="stylesheets/header.css" />
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>
        <title>Edit Profile</title>
    </head>
    <body>
        <div class="header">
            <div class="website-name">
                <span class="webname"><a href="home"><span class="logo"></span></a></span>
            </div>

            <div class="tabs-container">
                <ul class="tabs">
                    <div class="home"><a href="home">Home</a></div>
                </ul>
            </div>

            <div class="actions-container">                
                <div class="action-buttons">
                    <ul class="actions">
                        <li class="profile">
                            <a href="profile">
                                <span class="material-symbols-outlined">
                                    person
                                </span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="body-container">
            <div class="general-container">
                <h2 class="edit-header">Edit Profile</h2>
                <div class="flex edit-container">
                    <form class="no-margin" action="/submit-edit-profile" method="post" enctype="multipart/form-data">
                        <div>
                            <label>Photo</label>
                            <div class="flex pfp-container">
                                <img id="current-pfp" class="current-pfp" src="images/{{ user.img }}" />
                                <label for="pfp-uploader" class="button pfp-uploader-label">Upload image</label>
                                <input name="image" type="file" id="pfp-uploader" accept="image/*" />
                            </div>
                            
                            <label>Description</label><br />
                            <textarea id="description" rows="4" name="description">{{ user.description }}</textarea><br />
                            <button class="button save-edit no-padding"><a href="profile"><span class="material-symbols-outlined">save</span></a></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <script>
            $(document).ready(function() {
                $('#pfp-uploader').on('change', function(event) {
                    var file = event.target.files[0];
                    var reader = new FileReader();

                    reader.onload = function(e) {
                        $('#current-pfp').attr('src', e.target.result);
                    };

                    reader.readAsDataURL(file);
                });
            });
        </script>
    </body>
</html>
